    <LinearLayout
        android:id="@+id/linear_no_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="There is no movies in your favorite list yet"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="if you want to make some to your favorite list"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/clickhere_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here"
            android:textColor="@color/blue"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/clickhere"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        style="@style/list_choice"
        />

