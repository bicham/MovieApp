<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearContainer"
    android:orientation="vertical"
    android:background="@drawable/ic_background">
    <LinearLayout
        android:id="@+id/linearContainer_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue50"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/details_Image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:background="@drawable/imagecustom"/>


            <TextView
                android:id="@+id/details_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="ahmed"
                android:textStyle="bold"
                android:textColor="@color/title_text_color"
                android:gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size" />

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearContainer_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#212121"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#616161"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearContainer_body_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearContainer_details"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/details_date_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="08/2015"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/date_text_custom"/>

                        <RatingBar
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:transformPivotX="0dp"
                            android:transformPivotY="10dp"
                            android:id="@+id/details_rating"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:numStars="8" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white">
                        <Button
                            android:id="@+id/details_favorite_button"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/details_button"
                            android:textSize="15sp"
                            android:background="@drawable/buttoncustom"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/details_review_button"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/review_button"
                            android:textSize="15sp"
                            android:background="@drawable/review_button_custom"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:background="@color/blue50">

                        <TextView
                            android:id="@+id/details_overview_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="@drawable/linecustom"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearContainer_review"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trailers: "
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/black"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"

                        android:layout_marginRight="20dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/trailer_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                    </android.support.v7.widget.RecyclerView>



                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
</FrameLayout>
